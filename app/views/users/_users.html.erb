<% if users.any? %>
  <ul class="list-unstyled">
    <% users.each do |user| %>
      <li class="media">
        
      <% if user.image? %>
       <img class="mr-2 rounded" src="<%= user.image.thumb50.url(user, { size: 50 }) %>" alt="">
      <% else %>
      <%= image_tag "/assets/default.u.jpeg", :size => '100x100' %>
      <% end %>
     
        <div class="media-body">
          <div>
            <%= user.name %>
          </div>
          <div>
          <p><%= link_to 'View profile', user_path(user) %></p>
          </div>
        </div>
      </li>
    <% end %>
  </ul>
  <%= paginate users %>
<% end %>