<ul class="list-unstyled">
  <% guitars.each do |guitar| %>
    <li class="media">
      
       <% if guitar.photo? %>
  <img class="mr-2 rounded" src="<%= guitar.photo.thumb.url(guitar, { size: 50 }) %>" alt="">
  <% else %>
   <%= image_tag "/assets/default.g.jpg", :size => '100x100' %>
      <% end %>
      
    <div class="media-body">
        <div>
          <%= link_to guitar.user.name, user_path(guitar.user) %> <span class="text-muted">posted at <%= guitar.created_at %></span>
        </div>
        <div>
          <p class="mb-0"><%= link_to guitar.content, guitar, id: "detail-" + guitar.id.to_s %></p>
        </div>
      </div>
       <% if current_user == guitar.user %>
            <%= link_to "Delete", guitar, method: :delete, data: { confirm: "You sure?" }, class: 'btn btn-danger btn-sm' %>
          <% end %>
          <%= render 'favorites/favorite_button', guitar: guitar %>
        </div>
      </div>
    </li>
  <% end %>
  <%= paginate guitars %>
</ul>