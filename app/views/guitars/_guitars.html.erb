<ul class="list-unstyled">
  <% guitars.each do |guitar| %>
    <li class="media mb-3">

      <div class="media-body">
        <div>
          <%= link_to guitar.user.name, user_path(guitar.user) %> <span class="text-muted">posted at <%= guitar.created_at %></span>
        </div>
        <div>
          <p><%= guitar.content %></p>
        </div>
      </div>
    </li>
  <% end %>
  <%= paginate guitars %>
</ul>