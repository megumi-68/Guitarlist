<div class="d-flex align-items-center">
  <h1>編集</h1>
  <div class="ml-auto posts_button">
      <a class="btn btn-outline-info" href="/">投稿一覧</a>
  </div>
</div>
<div class="row">
<%= form_for(@guitar) do |f| %>
   <% if @guitar.photo? %>
      <%= image_tag @guitar.photo.thumb.url, :alt => 'ギター画像' %>
   <% else %>
      <%= image_tag "/assets/default.g", :alt => 'デフォルト画像', :size => '100x100' %>
   <% end %>
      <button type="button" class="btn btn-outline-secondary rounded-pill">
         <%= f.file_field :photo, accept: 'image/jpeg,image/gif,image/png' %>
      </button>
 <%= render 'layouts/error_messages', model: f.object %>
    <div class="form-group">
        <%= f.label :category, 'カテゴリー' %>
        <%= f.text_field :category, class: 'form-control' %>
        <small id="poster-tip" class="form-text text-muted">
            カテゴリーを選択
        </small>
    </div>
    <div class="form-group">
        <%= f.label :name, 'モデル名' %>
        <%= f.text_field :name, class: 'form-control' %>
        <small id="title-tip" class="form-text text-muted">
            モデル名を入力
        </small>
    </div>
    <div class="form-group">
        <%= f.label :content, '投稿内容' %>
        <%= f.text_area :content, class: 'form-control', rows:5 %>
        <small id=content-tip" class="form-text text-muted">
            投稿内容を入力してください。 
        </small>
    </div>
    <%= f.submit '編集完了', class: 'btn btn-info btn-block' %>
    <small id="submit-tip" class="form-text text-muted">
        編集内容を見直してください
    </small>
<% end %>