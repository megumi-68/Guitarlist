<header class="mb-4">
  <nav class="navbar navbar-expand-sm navbar-light style="background-color:#e3f2fd;>
    <a class="navbar-brand" href="/"><img src="/assets/pagelogo/" alt="WEBSTロゴ"></a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse justify-content-end" id="navbarSupportedContent">
      <ul class="navbar-nav">
        <% if logged_in? %>
         <%= form_with url: search_guitars_path, method: :get, local: true do |f| %>
         <%= f.text_field :name , placeholder: "検索"%>
        <%= button_tag :type => "submit", :class =>"btn btn-outline-success my-2 my-sm-0" do %>
        <i class="fas fa-search"></i>
        <% end %>
       <% end %>
  <div class="ml-auto posts_button">
